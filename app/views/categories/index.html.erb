<h1 id="titleheader" >
List of Categories</h1>

<div align = "center">
  
  <%= will_paginate %>
</div>
<% @categories.each do |category| %>

<ul class="listing">
  <div class="row">
  <div class="well col-xs-8 col-xs-offset-2"> 

         <li><%= link_to "#{category.name}", category_path(category) %></li>
    <li><small><%= pluralize(category.articles.count, "article") %></small></li>
  

  </div>
</div>
</ul>
    

<% end %>
<div align = "center">
  
  <%= will_paginate %>
</div>
